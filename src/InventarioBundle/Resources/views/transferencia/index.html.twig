{% extends '::inventarioadmin.html.twig' %}
{% block title %}Inventario | Transferencias{% endblock %}
{% block title_section %}
    Inventario
    <small>Movimiento</small>
{% endblock %}
{% block trans_activo %}class="active"{% endblock %}
{% block tree_mov %}active{% endblock %}
{% block breadcrumb %}
    <li class="">Inventario</li>
    <li class="active">Transferencia</li>
{% endblock %}
{% block main_content %}
    <div class="box">
        <br>
        <div class="box-header">
            <h3 class="box-title">Lista de transferencias</h3>
            <div class="pull-right">
                <a href="{{ path('transferencia_new') }}" title="Adicionar" id="btn_adicionar"
                   class="btn  btn-primary">
                    <span class="glyphicon glyphicon-file "></span> Adicionar</a>
            </div>
        </div><!-- /.box-header -->
        <div class="box-body">
            <table class="table table-bordered table-striped todasTablas hover">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Artículo</th>
                        <th>Sección inicial</th>
                        <th>Sección final</th>
                        <th>Cantidad</th>
                        <th width="80">Acciones</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Fecha</th>
                        <th>Artículo</th>
                        <th>Sección inicial</th>
                        <th>Sección final</th>
                        <th>Cantidad</th>
                        <th width="80">Acciones</th>
                    </tr>
                </tfoot>
                <tbody>
                {% for dat in transferencias %}
                    <tr id="{{ dat.id }}">
                        <td>{{ dat.fecha | date('d/m/Y') }}</td>
                        <td>{{ dat.articulo }}</td>
                        <td>{{dat.seccionini }}</td>
                        <td>{{dat.seccionfin }}</td>
                        <td align="center">{{ dat.cantidad }}</td>
                        <td align="center">
                            <a title="Mostrar detalle" class="text-black" href="{{ path('transferencia_show', { 'id': dat.id }) }}"><span
                                        class="glyphicon glyphicon-eye-open"></span></a>&emsp;
                            <a title="Editar elemento" class="text-blue" href="{{ path('transferencia_edit', { 'id': dat.id }) }}"><span
                                        class="glyphicon glyphicon-pencil"></span></a>
                            &emsp;
                            <a title="Eliminar elemento"  href="#" class="text-red btn_eliminar"
                               data-url="{{ path('transferencia_delete') }}"><span
                                        class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}

