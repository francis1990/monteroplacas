{% extends '::inventarioadmin.html.twig' %}
{% block title_section %}
    Inventario
    <small>Movimiento</small>
{% endblock %}
{% block movimiento_activo %}class="active"{% endblock %}
{% block tree_mov %}active{% endblock %}
{% block breadcrumb %}
    <li class="">Inventario</li>
    <li><a href="{{ path('movimientoinv_index') }}">Movimiento</a></li>
    <li class="active">Detalle</li>
{% endblock %}
{% block main_content %}

    <div class="row">
        <div class="col-md-12">
            <div class="box box-solid">
                <div class="box-header with-border">
                    <i class="glyphicon glyphicon-list"></i>
                    <h3 class="box-title">Detalle</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <dl class="dl-horizontal">
                        <dt>Fecha</dt>
                        <dd>  {{ movimiento.fecha | date('d/m/Y') }} </dd>
                        <dt>Artículo</dt>
                        <dd> {{ movimiento.articulo }}</dd>
                        <dt>Motivo</dt>
                        <dd> {{ movimiento.motivo }}</dd>
                        <dt>Almacén</dt>
                         <dd> 
                            {% if movimiento.seccion %}{{ movimiento.seccion.almacen }}{% endif %}
                        </dd>
                        <dt>Sección</dt>
                        <dd> 
                            {% if movimiento.seccion %}{{ movimiento.seccion.nombre }}{% endif %}
                        </dd>
                        <dt>Cantidad</dt>
                        <dd> {{ movimiento.cantidad }}</dd>
                    </dl>
                </div><!-- /.box-body -->
                <div class="box-footer">
                    {% if movimiento.transferencia is null and movimiento.compra is null and movimiento.venta is null %}
                    <a href="{{ path('movimientoinv_edit', { 'id': movimiento.id }) }}" class="btn btn-success">
                        <span class="glyphicon glyphicon-pencil"></span>
                        Editar</a>
                    {% endif %}
                    <a href="{{ path('movimientoinv_index') }}" class="btn btn-default">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                        Volver</a>
                </div>
            </div><!-- /.box -->
        </div><!-- ./col -->
    </div>

{% endblock %}

