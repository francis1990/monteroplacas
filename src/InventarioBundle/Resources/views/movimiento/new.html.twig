
{% extends '::inventarioadmin.html.twig' %}
{% block title_section %}
    Inventario
    <small>Movimiento</small>
{% endblock %}
{% block movimiento_activo %}class="active"{% endblock %}
{% block tree_mov %}active{% endblock %}
{% block breadcrumb %}
    <li>Inventario</li>
    <li><a href="{{ path('movimientoinv_index') }}">Movimiento</a></li>
    <li class="active">{{ accion }}</li>
{% endblock %}
{% block main_content %}
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-xs-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">{{ accion }} movimiento</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <div class="box-body">
                        {{ form_start(form,{'attr':{ 'id':'form-motivo' }}) }}
                        <div class="form-horizontal bootstrap-validator-form">
                            <fieldset>
                             <div class="form-group ">
                                    <label for="{{ form.fecha.vars.id }}"
                                           class="col-sm-3 control-label "> {{ form_label(form.fecha) }}</label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.fecha) }}
                                        {{ form_errors(form.fecha) }}
                                    </div>
                                </div>
                                  <div class="form-group ">
                                    <label for="{{ form.articulo.vars.id }}"
                                           class="col-sm-3 control-label "> {{ form_label(form.articulo) }}</label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.articulo) }}
                                        {{ form_errors(form.articulo) }}
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="{{ form.motivo.vars.id }}"
                                           class="col-sm-3 control-label "> {{ form_label(form.motivo) }}</label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.motivo) }}
                                        {{ form_errors(form.motivo) }}
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="{{ form.seccion.vars.id }}"
                                           class="col-sm-3 control-label "> {{ form_label(form.seccion) }}</label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.seccion) }}
                                        {{ form_errors(form.seccion) }}
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="{{ form.cantidad.vars.id }}"
                                           class="col-sm-3 control-label "> {{ form_label(form.cantidad) }}</label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.cantidad) }}
                                        {{ form_errors(form.cantidad) }}
                                    </div>
                                </div>

                            </fieldset>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <div class="col-xs-6 col-xs-offset-6">
                                    <button title="Aceptar"
                                            data-action="aplicar"
                                            type="submit" class="btn btn-primary"
                                            id="btnadd">
                                        <span class="glyphicon glyphicon-ok"></span>
                                        Aceptar
                                    </button>
                                <a href="{{ path('movimientoinv_index') }}"  title="Cerrar" class="btn btn-default">
                                    <span class="glyphicon glyphicon-remove"></span> Cerrar</a>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box -->
                {{ form_end(form) }}
            </div><!--/.col (left) -->

        </div>   <!-- /.row -->
    </section>
{% endblock %}
