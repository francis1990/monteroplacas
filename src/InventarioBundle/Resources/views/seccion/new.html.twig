
{% extends '::inventarioadmin.html.twig' %}
{% block title_section %}
    Inventario
    <small>Sección</small>
{% endblock %}
{% block seccion_activo %}class="active"{% endblock %}
{% block tree_alm %}active{% endblock %}
{% block breadcrumb %}
    <li>Inventario</li>
    <li><a href="{{ path('seccion_index') }}">Sección</a></li>
    <li class="active">{{ accion }}</li>
{% endblock %}
{% block main_content %}
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-xs-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">{% if accion !='Nuevo' %}{{ accion }}{% else %}Nueva{% endif %} sección</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <div class="box-body">
                        {{ form_start(form,{'attr':{ 'id':'form-seccion' }}) }}
                        <div class="form-horizontal bootstrap-validator-form">
                            <fieldset>
                                <div class="form-group ">
                                    <label for="{{ form.nombre.vars.id }}"
                                           class="col-sm-3 control-label "> {{ form_label(form.nombre) }}</label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.nombre) }}
                                        {{ form_errors(form.nombre) }}
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="{{ form.almacen.vars.id }}"
                                           class="col-sm-3 control-label "> {{ form_label(form.almacen) }}</label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.almacen) }}
                                        {{ form_errors(form.almacen) }}
                                    </div>
                                </div>


                            </fieldset>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <div class="col-xs-6 col-xs-offset-6">
                                    <button title="Aceptar"
                                            data-action="aplicar"
                                            type="submit" class="btn btn-primary"
                                            id="btnadd">
                                        <span class="glyphicon glyphicon-ok"></span>
                                        Aceptar
                                    </button>
                                <a href="{{ path('seccion_index') }}"  class="btn btn-default" title="Cerrar">
                                    <span class="glyphicon glyphicon-remove"></span> Cerrar</a>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box -->
                {{ form_end(form) }}
            </div><!--/.col (left) -->

        </div>   <!-- /.row -->
    </section>
{% endblock %}
