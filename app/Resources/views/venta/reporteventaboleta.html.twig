<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title></title>
</head>
<style type="text/css">
    .cliente td,.subtotal td{
      line-height:  12px;
      
     
    }
   
  
</style>
<body>

<br/>
<br/>
<br/>
<br/>
<br/>





<table class="cliente" style="margin-top:240px">

    <tr>
        <td width="75"></td>
        <td style="width: 320px;margin-top:3px;padding-bottom: 5px;height: 15px;">{{ venta.cliente.nombre }}</td>
       
    </tr>

    <tr>
        <td width="75"></td>
        <td style="width: 180px;">{{ venta.cliente.direccion }}</td>
         <td style="width: 170px;margin-right:50px" align="right">00{{ venta.serie }} - 0{{ venta.numerodedocumento }}</td>
    </tr>

    <tr>
        <td></td>
        <td  width="83"></td>
        <td width="45" style="padding-left: 55px;text-align: right;">{{ dia }} </td>
        <td width="25">{{  mes}} </td>
        <td width="40">{{  anno}} </td>
    </tr>
</table>

<br/>
<br/>
<br/>


<div class="articulos">
    <br/>
<table>
        {% for articulo in venta.articuloventas %}
            <tr>
                <td width="48"></td>
                <td width="40" align="left">{{ articulo.cantidad|number_format(2, '.', '.') }}</td>
                <td width="368"  >{{ articulo.articulo }}</td>
                <td width="35" align="center">{{ articulo.precio|number_format(2, '.', '.') }}</td>
                <td width="59" align="center">{{ articulo.importe|number_format(2, '.', '.') }}</td>
            </tr>
        {% endfor %}
</table>
</div>
{% if venta.documento.igv %}
    {% set igv= (venta.montototalapagar/1.18*0.18)|number_format(2, '.', ',')   %}
    {% set total= venta.montototalapagar %}
     {% set subtotal= venta.montototalapagar/1.18  %}
{% else %}
    {% set igv= 0 %}
    {% set total= venta.montototalapagar + igv  %}
    {% set subtotal= venta.montototalapagar  %}
{% endif %}
{% if total>999 and total<2000%}
    {% set un= 'UN' %}
   
{% else %}
    {% set un= '' %}
   
{% endif %}
{% for i in 1..(12- venta.articuloventas|length) %}
    <br/>
{% endfor %}
<br/>
<br/>
<br/>
<div style="text-align: right;">
    <table  class="subtotal">

       


        <tr >
            <td style="text-align:left; " width="38"></td>
            <td style="font-size:9px;line-height: 1.5;" width="320"><h3 style=""> </h3></td>
        </tr>
         <br/>
         
        <tr >
            <td style="line-height: 1.8;" width="495"></td>
            <td style="line-height: 1.8;" width="50"></td>
            

        </tr>
         
        <tr >
            <td style="line-height: 1.8;margin-top:50px;text-align:left;" ></td>
            <td style="line-height: 1.8;margin-top:50px;"></td>

        </tr>
        <tr >
            <td style="line-height: 1.8;text-align: left;"></td>
            <td style="line-height: 1.8;">{{ total|number_format(2, '.', '.') }}</td>

        </tr>
         <tr >
            <td style="line-height: 1.8;" width="250"></td>
            <td style="line-height: 1.8;" >{{ venta.vendedor.nombre}}</td>

        </tr>
    </table>
   


</div>
</body>
</html>