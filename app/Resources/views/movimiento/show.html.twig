{% extends 'inventarioadmin.html.twig' %}
{% block content %}
    <h1>Movimiento</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movimiento.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ movimiento.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ movimiento.descripcion }}</td>
            </tr>
            <tr>
                <th>Cantidad</th>
                <td>{{ movimiento.cantidad }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('movimiento_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('movimiento_edit', { 'id': movimiento.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
