{% block contenido %}
      
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <h3 class="heading">Pago</h3>
                </div>
            </div>
            <div class="form_error">{{form_errors(form)}}</div>
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    {{ form_start(form,{'attr':{ 'class':'form-horizontal form_validation_reg'}}) }}
                    <div class="formSep">
                        <div class="row">
                            <div class="col-xs-12">
                                <fieldset>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3">{{ form_label(form.cliente) }}</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.cliente) }}
                                            {{ form_errors(form.cliente) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3">Serie-NÃºmero Factura</label>
                                        <div class="col-sm-4">
                                            {{ form_widget(form.serie) }}
                                            {{ form_errors(form.serie) }}
                                        </div>
                                        <div class="col-sm-4">

                                            {{ form_widget(form.numerofactura) }}
                                            {{ form_errors(form.numerofactura) }}
                                        </div>                                        
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3">{{ form_label(form.montopagado) }}</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.montopagado) }}
                                            {{ form_errors(form.montopagado) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3">{{ form_label(form.fechapago) }}</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.fechapago) }}
                                            {{ form_errors(form.fechapago) }}
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                    <div class="formSep form-actions">
                        <a class="btn btn-default" href="{{ path('pago_index') }}"><span class="glyphicon glyphicon-arrow-left"></span> Volver</a>
                        <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-save"></span> Guardar</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>

{% endblock %}
