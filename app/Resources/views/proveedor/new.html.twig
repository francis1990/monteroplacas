{% extends 'sistemadmin.html.twig' %}
{% block breadCrumb %}
    {{ parent() }}
    <li>
        <a href="{{ path('proveedor_index') }}">Proveedor</a>
    </li>
    <li>
        Nuevo
    </li>

{% endblock %}

{% block contenido %}
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <h3 class="heading">Proveedor</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12">
            {{ form_start(form,{'attr':{ 'class':'form-horizontal form_validation_reg'}}) }}
            <div class="formSep">
                <div class="row">
                    <div class="col-xs-12">
                        <fieldset>
                            <div class="form-group">
                                <label class="control-label col-sm-2">{{ form_label(form.nombre) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.nombre) }}
                                    {{ form_errors(form.nombre) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2">Número de serie</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.numerodocumento) }}
                                    {{ form_errors(form.numerodocumento) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2">{{ form_label(form.ruc) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.ruc) }}
                                    {{ form_errors(form.ruc) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2">Razón social</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.razonsocial) }}
                                    {{ form_errors(form.razonsocial) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2">{{ form_label(form.direccion) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.direccion) }}
                                    {{ form_errors(form.direccion) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2">{{ form_label(form.correo) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.correo) }}
                                    {{ form_errors(form.correo) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2">{{ form_label(form.telefono) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.telefono) }}
                                    {{ form_errors(form.telefono) }}
                                </div>
                            </div>

                        </fieldset>
                    </div>
                </div>
            </div>
            <div class="formSep form-actions">
                <a class="btn btn-default" href="{{ path('proveedor_index') }}"> <span class="glyphicon glyphicon-arrow-left"></span> Volver</a>
                <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-save"></span> Guardar</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
