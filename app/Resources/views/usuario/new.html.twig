
{% extends 'sistemadmin.html.twig' %}
{% block breadCrumb %}
    {{ parent() }}
    <li>
        <a href="{{ path('usuario_index') }}">Usuario</a>
    </li>
    <li>
        Nuevo
    </li>

{% endblock %}
{% block contenido %}
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <h3 class="heading">Crear Usuario</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12">
            {{ form_start(form,{'attr':{ 'class':'form-horizontal form_validation_reg'}}) }}
            <div class="formSep">
                <div class="row">
                    <div class="col-xs-12">
                        <fieldset>
                            <div class="form-group">
                                <label class="control-label col-sm-2">{{ form_label(form.username) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.username) }}
                                    {{ form_errors(form.username) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2">{{ form_label(form.password.first) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.password.first) }}
                                    {{ form_errors(form.password.first) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2">{{ form_label(form.password.second) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.password.second) }}
                                    {{ form_errors(form.password.second) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2">{{ form_label(form.rols) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.rols) }}
                                    {{ form_errors(form.rols) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2">{{ form_label(form.activo) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.activo) }}
                                    {{ form_errors(form.activo) }}
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
            <div class="formSep form-actions">
                <a class="btn btn-default" href="{{ path('usuario_index') }}"> <span class="glyphicon glyphicon-arrow-left"></span> Volver</a>
                <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-save"></span> Guardar</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
