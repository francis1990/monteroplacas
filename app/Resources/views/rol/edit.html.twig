{% extends 'sistemadmin.html.twig' %}
{% block breadCrumb %}
    {{ parent() }}
    <li>
        <a href="{{ path('rol_index') }}">Rol</a>
    </li>
    <li>
        Editar
    </li>

{% endblock %}
{% block contenido %}
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <h3 class="heading">Editar Rol</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12">
            {{ form_start(edit_form,{'attr':{ 'class':'form-horizontal form_validation_reg'}}) }}
            <div class="formSep">
                <div class="row">
                    <div class="col-xs-12">
                        <fieldset>
                            <div class="form-group">
                                <label class="control-label col-sm-2">{{ form_label(edit_form.descripcion) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(edit_form.descripcion) }}
                                    {{ form_errors(edit_form.descripcion) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2">{{ form_label(edit_form.activo) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(edit_form.activo) }}
                                    {{ form_errors(edit_form.activo) }}
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
            <div class="formSep form-actions">
                <a class="btn btn-default" href="{{ path('rol_index') }}"> <span class="glyphicon glyphicon-arrow-left"></span> Volver</a>
                <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-save"></span> Guardar</button>
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>

{% endblock %}
