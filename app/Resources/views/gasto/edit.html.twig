{% extends 'sistemadmin.html.twig' %}
{% block breadCrumb %}
    {{ parent() }}
    <li>
        <a href="{{ path('pago_index') }}">Gasto</a>
    </li>
    <li>
        Editar
    </li>

{% endblock %}
{% block contenido %}

    <div class="row">
        <div class="col-sm-12 col-md-12">
            <h3 class="heading">Gasto</h3>
        </div>
    </div>
    <div class="form_error">{{form_errors(form)}}</div>
    <div class="row">
        <div class="col-sm-12 col-md-12">
            {{ form_start(form,{'attr':{ 'class':'form-horizontal form_validation_reg'}}) }}
            <div class="formSep">
                <div class="row">
                    <div class="col-xs-12">
                        <fieldset>
                            <div class="form-group">
                                <label class="control-label col-sm-3">{{ form_label(form.motivo) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.motivo) }}
                                    {{ form_errors(form.motivo) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-3">{{ form_label(form.nombre) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.nombre) }}
                                    {{ form_errors(form.nombre) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3">{{ form_label(form.cantidad) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.cantidad) }}
                                    {{ form_errors(form.cantidad) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3">{{ form_label(form.fecha) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.fecha) }}
                                    {{ form_errors(form.fecha) }}
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
            <div class="formSep form-actions">
                <a class="btn btn-default" href="{{ path('gasto_index') }}"><span class="glyphicon glyphicon-arrow-left"></span> Volver</a>
                <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-save"></span> Guardar</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
