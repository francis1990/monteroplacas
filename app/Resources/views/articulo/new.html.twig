{% extends 'sistemadmin.html.twig' %}
{% block breadCrumb %}
    {{ parent() }}
    <li>
        <a href="{{ path('articulo_index') }}">Artículo</a>
    </li>
    <li class="active">
       Nuevo
    </li>
{% endblock %}
{% block contenido %}
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <h3 class="heading">Nuevo Artículo</h3>
        </div>
    </div>

    <div class="form_error">{{form_errors(form)}}</div>
    <div class="row">
                <div class="col-sm-12 col-md-12">
                    {{ form_start(form,{'attr':{ 'class':'form-horizontal form_validation_reg'}}) }}
                    <div class="formSep">
                        <div class="row">
                            <div class="col-xs-12">
                                <fieldset>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2">{{ form_label(form.nombre) }}</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.nombre) }}
                                            {{ form_errors(form.nombre) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2">Proveedores</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.proveedor) }}
                                            {{ form_errors(form.proveedor) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2">{{ form_label(form.abreviatura) }}</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.abreviatura) }}
                                            {{ form_errors(form.abreviatura) }}
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-sm-2">{{ form_label(form.fechainsercion) }}</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.fechainsercion) }}
                                            {{ form_errors(form.fechainsercion) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2">{{ form_label(form.marca) }}</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.marca) }}
                                            {{ form_errors(form.marca) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2">{{ form_label(form.medida) }}</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.medida) }}
                                            {{ form_errors(form.medida) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2">Unidad de medida</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.unidaddemedida) }}
                                            {{ form_errors(form.unidaddemedida) }}
                                        </div>
                                    </div>    
                                    <div class="form-group">
                                        <label class="control-label col-sm-2">{{ form_label(form.modelo) }}</label>
                                        <div class="col-sm-8">
