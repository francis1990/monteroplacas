                                            {{ form_errors(form.preciodeventa) }}
                                        </div>
                                    </div><div class="form-group">
                                        <label class="control-label col-sm-2">{{ form_label(form.preciodecompra) }}</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.preciodecompra) }}
                                            {{ form_errors(form.preciodecompra) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2">{{ form_label(form.precioventalpormayor) }}</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.precioventalpormayor) }}
