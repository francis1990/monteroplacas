                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2">{{ form_label(form.preciocompralpormayor) }}</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.preciocompralpormayor) }}
                                            {{ form_errors(form.preciocompralpormayor) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2"> Imagen</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.file) }}
                                            {{ form_errors(form.file) }}
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-sm-2">{{ form_label(form.descripcion) }}</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.descripcion) }}
                                            {{ form_errors(form.descripcion) }}
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                    <div class="formSep form-actions">
                        <a class="btn btn-default" href="{{ path('articulo_index') }}"><span class="glyphicon glyphicon-arrow-left"></span> Volver</a>
                        <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-save"></span> Guardar</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
    
