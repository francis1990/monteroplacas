
{% extends 'sistemadmin.html.twig' %}
{% block breadCrumb %}
    {{ parent() }}
    <li>
        <a href="{{ path('vendedor_index') }}">Vendedor</a>
    </li>
    <li>
        Nuevo
    </li>
{% endblock %}
{% block contenido %}
    <div id="contentwrapper">
            
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <h3 class="heading">Nuevo Vendedor</h3>
                </div>
            </div>
            <div class="form_error">{{form_errors(form)}}</div>
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    {{ form_start(form,{'attr':{ 'class':'form-horizontal form_validation_reg'}}) }}
                    <div class="formSep">
                        <div class="row">
                            <div class="col-xs-12">
                                <fieldset>
                                    
                                    <div class="form-group">
                                        <label class="control-label col-sm-2">{{ form_label(form.dni) }}</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.dni) }}
                                            {{ form_errors(form.dni) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2">{{ form_label(form.nombre) }}</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.nombre) }}
                                            {{ form_errors(form.nombre) }}
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label class="control-label col-sm-2">{{ form_label(form.direccion) }}</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.direccion) }}
                                            {{ form_errors(form.direccion) }}
                                        </div>
                                    </div><div class="form-group">
                                        <label class="control-label col-sm-2">{{ form_label(form.telefono) }}</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.telefono) }}
                                            {{ form_errors(form.telefono) }}
                                        </div>
                                    </div><div class="form-group">
                                        <label class="control-label col-sm-2">{{ form_label(form.celular) }}</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.celular) }}
                                            {{ form_errors(form.celular) }}
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label class="control-label col-sm-2">{{ form_label(form.email) }}</label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.email) }}
                                            {{ form_errors(form.email) }}
                                        </div>
                                    </div>
                                     <div class="form-group">
                                        <label class="control-label col-sm-2"> Foto </label>
                                        <div class="col-sm-8">
                                            {{ form_widget(form.file) }}
                                            {{ form_errors(form.file) }}
                                        </div>
                                    </div> 
                                </fieldset>
                            </div>
                        </div>
                    </div>
                    <div class="formSep form-actions">
                        <a class="btn btn-default" href="{{ path('vendedor_index') }}"><span class="glyphicon glyphicon-arrow-left"></span> Volver</a>
                        <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-save"></span> Guardar</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>


{% endblock %}
