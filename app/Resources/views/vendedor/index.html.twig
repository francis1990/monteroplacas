                            </div>
                        </form>
                    </div>

                </div>
            </div>
                            
            <div class="row" >
        <div class="col-sm-12 col-md-12 menu-acciones">
            <a class="btn btn-success" href="{{ path('vendedor_new') }}"><span class="glyphicon glyphicon-file"></span> Nuevo</a>

        </div>
    </div>
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <table class="table table-bordered table-responsive table-striped table_vam" id="dt_a">
                        <thead>
                        <tr>
                            <th>DNI</th>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for vendedor in vendedors %}
                            <tr>    
                                <td>{{ vendedor.dni }}</td>
                                <td>{{ vendedor.nombre }}</td>
                                <td>{{ vendedor.email }}</td>

                                <td>
                                    <a href="{{ path('vendedor_edit', { 'id': vendedor.id }) }}"
                                       class="sepV_a" title="Editar">
                                        <i class="glyphicon glyphicon-pencil"></i>
                                    </a>
                                    <a href="{{ path('vendedor_show', { 'id': vendedor.id }) }}"
                                       class="sepV_a" title="Ver Detalles">
                                        <i class="glyphicon glyphicon-eye-open"></i>
                                    </a>
                                    <a href="{{ path('vendedor_delete', { 'id': vendedor.id }) }}" title="Eliminar">
