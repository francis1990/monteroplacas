
{% extends 'inventarioadmin.html.twig' %}
{% block title_section %}
    Inventario
    <small>Motivo de movimiento</small>
{% endblock %}
{% block motivo_activo %}class="active"{% endblock %}
{% block tree_mov %}active{% endblock %}
{% block breadcrumb %}
    <li>Inventario</li>
    <li><a href="{{ path('motivo_index') }}">Motivo de movimiento</a></li>
    <li class="active">{{ accion }}</li>
{% endblock %}
{% block main_content %}
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-xs-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">{{ accion }}</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <div class="box-body">
                        {{ form_start(form,{'attr':{ 'id':'form-motivo' }}) }}
                        <div class="form-horizontal bootstrap-validator-form">
                            <fieldset>
                                <div class="form-group ">
                                    <label for="{{ form.nombre.vars.id }}"
                                           class="col-sm-3 control-label "> {{ form_label(form.nombre) }}</label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.nombre) }}
                                        {{ form_errors(form.nombre) }}
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="{{ form.abreviatura.vars.id }}"
                                           class="col-sm-3 control-label "> {{ form_label(form.abreviatura) }}</label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.abreviatura) }}
                                        {{ form_errors(form.abreviatura) }}
                                    </div>
                                </div><div class="form-group ">
                                    <label for="{{ form.descripcion.vars.id }}"
                                           class="col-sm-3 control-label "> {{ form_label(form.descripcion) }}</label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.descripcion) }}
                                        {{ form_errors(form.descripcion) }}
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="{{ form.tipo.vars.id }}"
                                           class="col-sm-3 control-label "> {{ form_label(form.tipo) }}</label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.tipo) }}
                                        {{ form_errors(form.tipo) }}
                                    </div>
                                </div>

                            </fieldset>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <div class="col-xs-6 col-xs-offset-6">

                                    <button title="Guardar"
                                            data-action="aplicar"
                                            type="submit" class="btn btn-primary"
                                            id="btnadd">
                                        <span class="glyphicon glyphicon-save"></span>
                                        Guardar
                                    </button>
                                <a href="{{ path('motivo_index') }}"  class="btn btn-default">
                                    <span class="glyphicon glyphicon-arrow-left"></span> Volver</a>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box -->
                {{ form_end(form) }}
            </div><!--/.col (left) -->

        </div>   <!-- /.row -->
    </section>
{% endblock %}
