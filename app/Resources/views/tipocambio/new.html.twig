
{% extends 'sistemadmin.html.twig' %}
{% block breadCrumb %}
    {{ parent() }}
    <li>
        <a href="{{ path('tipocambio_index') }}">Tipo de cambio</a>
    </li>
    <li>
        Configurar
    </li>
{% endblock %}
{% block contenido %}

    <div class="row">
        <div class="col-sm-12 col-md-12">
            <h3 class="heading">Tipo de cambio</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12">
            {{ form_start(form,{'attr':{ 'class':'form-horizontal form_validation_reg'}}) }}
            <div class="formSep">
                <div class="row">
                    <div class="col-xs-12">
                        <fieldset>
                            <div class="form-group">
                                <label class="control-label col-sm-2">{{ form_label(form.fecha) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.fecha) }}
                                    {{ form_errors(form.fecha) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2">{{ form_label(form.compra) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.compra) }}
                                    {{ form_errors(form.compra) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-2">{{ form_label(form.venta) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.venta) }}
                                    {{ form_errors(form.venta) }}
                                </div>
                            </div>

                        </fieldset>
                    </div>
                </div>
            </div>
            <div class="formSep form-actions">
                <a class="btn btn-default" href="{{ path('main') }}"><span class="glyphicon glyphicon-arrow-left"></span> Volver</a>
                <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-save"></span> Guardar</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
